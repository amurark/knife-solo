# Set the working application directory
working_directory '#{node[config][exp_path]}'

# Unicorn PID file location
pid "#{node[config][exp_path]}/tmp/pids/unicorn.pid"

# Path to logs
stderr_path "#{node[config][exp_path]}/log/unicorn.log"
stdout_path "#{node[config][exp_path]}/log/unicorn.log"

# Unicorn socket
listen "/tmp/unicorn.expertiza.sock"

# Number of processes
worker_processes 2

# Time-out
timeout 30
