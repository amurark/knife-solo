# Set the working application directory
# working_directory "/path/to/your/app"
working_directory "/home/root/expertiza"

# Unicorn PID file location
# pid "/path/to/pids/unicorn.pid"
pid "/home/root/expertiza/tmp/pids/unicorn.pid"

# Path to logs
# stderr_path "/path/to/log/unicorn.log"
# stdout_path "/path/to/log/unicorn.log"
stderr_path "/home/root/expertiza/log/unicorn.log"
stdout_path "/home/root/expertiza/log/unicorn.log"

# Unicorn socket
#listen "/tmp/unicorn.expertiza.sock"
listen "/tmp/unicorn.expertiza.sock"

# Number of processes
# worker_processes 4
worker_processes 2

# Time-out
timeout 30
